<section>
  <div class="container px-5 mx-auto pt-28">
    <h2 class="text-3xl font-bold lg:text-5xl">
      Simple, convenient and reliable
    </h2>
    <div class="grid py-12 md:grid-cols-2 lg:grid-cols-4 lg:py-16 gap-x-8 gap-y-12">



      {% for step in steps %}

      <div class="flex flex-col">
        <img src="/{{step.image}}.png" class="object-cover rounded-lg aspect-video lg:aspect-square">
        <h3 class="mt-2 text-xl font-bold lg:mt-4">
          {{step.title}}
        </h3>
        <p class="mt-2 lg:mt-4">{{step.desc}}
        </p>
      </div>

      {% endfor %}

    </div>
  </div>
</section>