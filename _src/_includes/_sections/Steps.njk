
    <section>
        <div class="container mx-auto px-5 pt-28">
          <h2 class="text-3xl lg:text-5xl font-bold">
            Simple, convenient and reliable
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 py-12 lg:py-16 gap-x-8 lg:gap-x-12 gap-y-12">



          {% for step in steps %}

            <div class="flex flex-col">
              <img src="/{{step.image}}.png" class=" rounded-lg aspect-video lg:aspect-square object-cover">
              <h3 class="font-bold text-xl mt-2 lg:mt-4">
                {{step.title}}
              </h3>
              <p class=" mt-2 lg:mt-4">{{step.desc}}
              </p>
            </div>

          {% endfor %}
  
          </div>
        </div>
      </section>
  